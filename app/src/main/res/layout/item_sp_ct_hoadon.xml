<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtTenSP_item_HDCT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên giày"/>
        <TextView
            android:id="@+id/txtMauSac_item_HDCT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Màu sắc"/>
        <TextView
            android:id="@+id/txtKichCo_item_HDCT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kích cỡ"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/txtGiaSP_item_HDCT"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Giá 1 sản phẩm"/>
        <TextView
            android:id="@+id/txtSoLuongMua_item_HDCT"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Số lượng mua"/>
    </LinearLayout>

</LinearLayout>