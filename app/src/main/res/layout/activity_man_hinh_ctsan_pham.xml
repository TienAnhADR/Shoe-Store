<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ManHinh_CTSanPham">

    <ImageView
        android:id="@+id/quaylai_rc_sanpham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/baseline_arrow_back_24" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10sp"
        android:layout_marginRight="20sp"
        android:background="@color/white"
        android:src="@drawable/baseline_shopping_cart_no_white" />

    <ImageView
        android:id="@+id/anh"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_below="@+id/quaylai_rc_sanpham"
        android:layout_marginBottom="10sp"
        android:scaleType="centerCrop"
        android:src="@drawable/shose_item" />

    <TextView
        android:id="@+id/tensanpham_sanpham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/anh"
        android:text="Ten san pham: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/giohang_sanpham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#84F678"
            android:padding="10sp"
            android:src="@drawable/baseline_add_shopping_cart_24" />

        <Button
            android:id="@+id/muangay_sanpham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:padding="9sp"
            android:text="Mua ngay"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>