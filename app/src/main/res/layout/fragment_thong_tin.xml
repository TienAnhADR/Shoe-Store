<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/s1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_nguoidung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/waiter" />

            <TextView
                android:id="@+id/txt_hoten_nguoidung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="Ten nguoi dung"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="Sản phẩm"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="23sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:padding="10dp"
                android:background="@drawable/khung_tt"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/ds_hoadon_nguoidung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:drawableLeft="@drawable/checklist"
                    android:text="Danh sách hóa đơn"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="textStart" />

                <TextView
                    android:id="@+id/giohang_nguoidung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:drawableLeft="@drawable/cart"
                    android:text="Giỏ hàng"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="textStart" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="Cá nhân"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="23sp" />

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="15dp"
              android:padding="10dp"
              android:background="@drawable/khung_tt"
              android:orientation="vertical">
              <TextView
                  android:id="@+id/thongtin_nguoidung"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="10sp"
                  android:drawableLeft="@drawable/list"
                  android:text="Cập nhật thông tin"
                  android:textSize="20sp"
                  android:textStyle="bold"
                  android:textAlignment="textStart" />

              <TextView
                  android:id="@+id/doimk_nguoidung"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="10sp"
                  android:drawableLeft="@drawable/change"
                  android:text="Đổi mật khẩu"
                  android:textSize="20sp"
                  android:textStyle="bold"
                  android:textAlignment="textStart" />

              <TextView
                  android:id="@+id/dangxuat_nguoidung"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="10sp"
                  android:drawableLeft="@drawable/lo"
                  android:text="Đăng xuất"
                  android:textSize="20sp"
                  android:textStyle="bold"
                  android:textAlignment="textStart" />
          </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>