<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/s1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                app:cardCornerRadius="80sp">

                <ImageView
                    android:id="@+id/img_nguoidung"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/avatar_df" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/txt_hoten_nguoidung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="Ten nguoi dung"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="Sản phẩm"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/ds_hoadon_nguoidung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="@drawable/raidus_img"
                android:drawableLeft="@drawable/turn_innnnn"
                android:text="Danh sách hóa đơn"
                android:textAlignment="textStart" />

            <Button
                android:id="@+id/giohang_nguoidung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="@drawable/raidus_img"
                android:drawableLeft="@drawable/baseline_shopping_cart_24"
                android:text="Giỏ hàng"
                android:textAlignment="textStart" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="Cá nhân"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/thongtin_nguoidung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="@drawable/raidus_img"
                android:drawableLeft="@drawable/user"
                android:text="Cập nhật thông tin"
                android:textAlignment="textStart" />

            <Button
                android:id="@+id/doimk_nguoidung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="@drawable/raidus_img"
                android:drawableLeft="@drawable/keyyyyyyy"
                android:text="Đổi mật khẩu"
                android:textAlignment="textStart" />

            <Button
                android:id="@+id/dangxuat_nguoidung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="@drawable/raidus_img"
                android:drawableLeft="@drawable/outtttt"
                android:text="Đăng xuất"
                android:textAlignment="textStart" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>